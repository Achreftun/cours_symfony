{% extends 'base.html.twig' %}

{% block title %}Hello PersonneController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello
			{{ controller_name }}! ✅</h1>

		{# {{ form(form) }} #}
		{{ form_start(form) }}
		<div>
			{{ form_label(form.nom, "Votre nom : ") }}
			{{ form_errors(form.nom) }}
			{{ form_widget(form.nom) }}
		</div>
		<div>
			{{ form_label(form.prenom, "Votre prénom : ") }}
			{{ form_errors(form.prenom) }}
			{{ form_widget(form.prenom) }}
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
